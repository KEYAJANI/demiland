# Environment Variables Template for Demiland Beauty Brand
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (Required)
VITE_SUPABASE_URL=your-supabase-project-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ImageKit Configuration (Optional - for image uploads and CDN)
VITE_IMAGEKIT_URL=your-imagekit-url
VITE_IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key

# Application Configuration
VITE_APP_NAME=DEMILAND
VITE_APP_VERSION=1.0.0
VITE_APP_TITLE=Demiland - Beauty & Cosmetics
VITE_APP_DESCRIPTION=Premium beauty products and cosmetics showroom

# Environment Specific Settings
# Values: development | staging | production
NODE_ENV=development
VITE_ENVIRONMENT=development

# Legacy API Configuration (Fallback)
VITE_API_URL=http://localhost:5000/api/v1
VITE_API_TIMEOUT=10000

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# JWT Configuration (Frontend reference)
VITE_JWT_EXPIRY=3600

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=your-ga-id
VITE_FACEBOOK_PIXEL_ID=your-fb-pixel-id

# Feature Flags (Optional)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CHAT_SUPPORT=false
VITE_ENABLE_A_B_TESTING=false

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false